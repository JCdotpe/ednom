<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#388E3C"
                android:endColor="#388E3C"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#388E3C" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#43A047"
                android:startColor="#43A047"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#43A047" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#4CAF50"
                android:startColor="#4CAF50"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#4CAF50" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>