<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ordanel.ednom.Fragments.CambiarCargo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_input">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese el DNI: "
            android:id="@+id/label_dni"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtDNI"
            android:hint="12345678"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:inputType="number"
            android:layout_alignTop="@+id/label_dni"
            android:layout_toRightOf="@+id/label_dni"
            android:layout_toEndOf="@+id/label_dni" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_check"
            android:src="@drawable/check"
            android:layout_marginLeft="10dp"
            android:background="@color/correct"
            android:layout_alignBottom="@+id/label_dni"
            android:layout_toRightOf="@+id/edtDNI"
            android:layout_toEndOf="@+id/edtDNI"
            android:visibility="invisible"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_below="@+id/edtDNI"
            android:layout_marginTop="5dp"
            android:id="@+id/view"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Mensaje de aviso"
            android:id="@+id/label_mensaje"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/img_check"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:layout_marginRight="20sp"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/layout_input">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_datos"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNI: "
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:id="@+id/label_personal_dni"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="1235678"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/txtDNI"
                    android:layout_alignTop="@+id/label_personal_dni"
                    android:layout_toRightOf="@+id/label_personal_dni"
                    android:layout_toEndOf="@+id/label_personal_dni" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre: "
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:id="@+id/label_nombre"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/label_personal_dni"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del Personal"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:id="@+id/txt_nombre_completo"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/txtDNI"
                    android:layout_toRightOf="@+id/label_nombre" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargo: "
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:id="@+id/label_cargo"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/txt_nombre_completo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Cargo del personal"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/txt_cargo"
                    android:layout_below="@+id/txt_nombre_completo"
                    android:layout_alignTop="@+id/label_cargo"
                    android:layout_toRightOf="@+id/label_cargo"
                    android:layout_toEndOf="@+id/label_cargo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local de Aplicación: "
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:id="@+id/label_local"
                    android:layout_below="@+id/txt_cargo"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:hint="Local de Aplicación"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/txtLocalAplicacion"
                    android:layout_alignTop="@+id/label_local"
                    android:layout_below="@id/txt_cargo"
                    android:layout_toRightOf="@+id/label_local"
                    android:layout_toEndOf="@+id/label_local"
                    android:layout_marginBottom="20dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_datos_cambio"
                android:layout_below="@+id/layout_datos"
                android:visibility="invisible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrese el nuevo cargo:  "
                    android:id="@+id/label_dni_cambio"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_alignTop="@+id/label_dni_cambio"
                    android:layout_toRightOf="@+id/label_dni_cambio"
                    android:layout_toEndOf="@+id/label_dni_cambio" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambiar Cargo"
                    android:id="@+id/btn_cambio_cargo"
                    android:gravity="center_horizontal"
                    android:textSize="25sp"
                    android:background="@drawable/button_cr"
                    android:textColor="@color/text_white"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/spinner"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true" />


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
