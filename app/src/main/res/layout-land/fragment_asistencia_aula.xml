<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/label_dni"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="Aula : " />
        <Spinner
            android:layout_width="720dp"
            android:layout_height="50dp"
            android:id="@+id/spinnerAula"
            android:layout_toRightOf="@+id/label_dni"
            android:spinnerMode="dropdown" />
        </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtE_DNI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numero_documento"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/edtDNI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="25dp"
            android:maxLength="8"
            android:hint="@string/numero_documento_text_hint"
            android:layout_alignBaseline="@id/txtE_DNI"
            android:layout_toRightOf="@id/txtE_DNI"
            android:layout_toEndOf="@id/txtE_DNI"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
        <TextView
            android:id="@+id/label_mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="mensaje"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignBaseline="@+id/edtDNI"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:visibility="invisible"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_below="@+id/edtDNI"
            android:layout_marginTop="15dp"
            android:id="@+id/view" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_datos"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/txtR_DNI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numero_documento_abrev"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/txtDNI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/numero_documento_text_hint"
                android:textSize="30dp"
                android:layout_alignBottom="@id/txtR_DNI"
                android:layout_toRightOf="@id/txtR_DNI"
                android:layout_toEndOf="@id/txtR_DNI"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@id/tableLayout"
                android:maxLines="4"
                android:singleLine="false"/>

            <TextView
                android:id="@+id/txtApellidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/apellidos_text_hint"
                android:textSize="45sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtR_DNI"
                android:layout_alignLeft="@+id/txtR_DNI"
                android:layout_alignStart="@+id/txtR_DNI"
                android:layout_toLeftOf="@id/tableLayout"
                android:maxLines="4"
                android:singleLine="false"/>


            <TextView
                android:id="@+id/txtNombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/nombres_text_hint"
                android:textSize="45sp"
                android:textStyle="bold"
                android:layout_below="@id/txtApellidos"
                android:layout_alignLeft="@id/txtApellidos"
                android:layout_alignStart="@id/txtApellidos"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/tableLayout"
                android:maxLines="4"
                android:singleLine="false"/>

            <TextView
                android:id="@+id/txtR_NombreLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/local_de_aplicacion"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#c8757575"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtNombres"
                android:layout_alignLeft="@+id/txtNombres"
                android:layout_alignStart="@+id/txtNombres" />

            <TextView
                android:id="@+id/txtLocalAplicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/local_de_aplicacion"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_below="@+id/txtR_NombreLocal"
                android:layout_alignLeft="@+id/txtR_NombreLocal"
                android:layout_alignStart="@+id/txtR_NombreLocal"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/tableLayout"
                android:maxLines="4"
                android:singleLine="false"/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:id="@+id/tableLayout">
                <TableRow>
                    <TextView
                        android:id="@+id/txtR_Aula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aula_aplicacion"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txtAula"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/aula_aplicacion_text_hint"
                        android:textSize="160sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:gravity="center"
                        />
                </TableRow>
            </TableLayout>

        </RelativeLayout>
        </ScrollView>


</LinearLayout>