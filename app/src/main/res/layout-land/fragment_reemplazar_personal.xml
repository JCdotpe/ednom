<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ordanel.ednom.Fragments.ReemplazarPersonal"
    android:id="@+id/layout_reemplazar_personal">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView">



    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese el DNI: "
        android:id="@+id/label_dni"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_dni"
        android:hint="12345678"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/label_dni"
        android:layout_toRightOf="@+id/label_dni"
        android:layout_toEndOf="@+id/label_dni" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_check"
        android:src="@drawable/check"
        android:layout_marginLeft="10dp"
        android:background="@color/correct"
        android:layout_alignBottom="@+id/label_dni"
        android:layout_toRightOf="@+id/txt_dni"
        android:layout_toEndOf="@+id/txt_dni"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Mensaje de aviso"
        android:id="@+id/label_message"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/img_check"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_datos"
        android:layout_below="@+id/label_dni" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/label_nombre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nombre del Personal"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/txt_nombre_completo"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/label_nombre" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargo: "

            android:id="@+id/label_cargo"
            android:layout_below="@+id/label_nombre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
