<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ordanel.ednom.MainActivity$PlaceholderFragment">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:collapseColumns="3"
        android:stretchColumns="*">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="2dp"
         >
        <TextView
            android:id="@+id/label_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:text="Reporte de Datos Locales"
            android:padding="10sp"
         />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10sp"
        android:background="#80DEEA"
        >
        <TextView
            android:id="@+id/label_blank"
            android:text=""
            android:layout_weight="0"
        />
        <TextView
            android:id="@+id/label_registro"
            android:text="Datos Registrados"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/label_sincronizado"
            android:text="Datos Sincronizados"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10sp"
            android:background="#E0E0E0"
            >
            <TextView
                android:id="@+id/label_moemento_1"
                android:text="Ingreso al Local de AplicaciÃ³n"
                android:layout_weight="0"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_nro_docentes_ingresos_registrados"
                android:textStyle="bold"
                android:hint="Nro Docentes registrados"
                android:typeface="serif"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txt_nro_docentes_ingresos_sincronizados"
                android:hint="Nro Docentes sincronizados"
                android:textStyle="bold"
                android:typeface="serif"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10sp"
            android:background="#E0E0E0"
            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/label_momento_2"
                android:text="Ingreso de Docentes al Aula"
                android:layout_weight="0"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_nro_docentes_aula_registrados"
                android:textStyle="bold"
                android:hint="Nro Docentes registrados"
                android:typeface="serif"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txt_nro_docentes_aula_sincronizados"
                android:hint="Nro Docentes sincronizados"
                android:textStyle="bold"
                android:typeface="serif"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10sp"
            android:background="#E0E0E0"
            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/label_momento_3"
                android:text="Registro de Fichas"
                android:layout_weight="0"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_nro_fichas_registradas"
                android:textStyle="bold"
                android:hint="Nro Fichas registradas"
                android:typeface="serif"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txt_nro_fichas_sincronizados"
                android:hint="Nro Fichas sincronizadas"
                android:textStyle="bold"
                android:typeface="serif"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10sp"
            android:background="#E0E0E0"
            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/label_momento_4"
                android:textSize="20sp"
                android:text="Registro de Cuadernillos"
                android:layout_weight="0"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_nro_cuadernillos_registrados"
                android:textStyle="bold"
                android:hint="Nro Cuadernillos registrados"
                android:typeface="serif"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txt_nro_cuadernillos_sincronizados"
                android:hint="Nro Cuadernillos sincronizados"
                android:textStyle="bold"
                android:typeface="serif"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>