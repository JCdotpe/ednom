<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ordanel.ednom.ObtainCensus">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Obtener el Último Padrón de Docentes"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnPadron"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/cloud"
        android:background="@drawable/button_cr"
        android:text="@string/padron_btn_text"
        android:textColor="@color/text_white"
        android:textStyle="bold"
        android:onClick="downloadPadron"
        android:layout_gravity="center_horizontal" />


</LinearLayout>