<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context="ordanel.ednom.UbigeoVerify" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/txtVerifyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Verificación de Local de Aplicación"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/txtE_Sede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sede : "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/txtVerifyTitle"
                android:layout_alignLeft="@+id/txtVerifyTitle"
                android:layout_alignStart="@+id/txtVerifyTitle"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/txtSede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre_de_la_sede"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#c8757575"
                android:layout_below="@+id/txtE_Sede"
                android:layout_alignLeft="@+id/txtE_Sede"
                android:layout_alignStart="@+id/txtE_Sede"/>

            <TextView
                android:id="@+id/txtE_Usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario : "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/txtE_Sede"
                android:layout_alignLeft="@+id/txtE_Sede"
                android:layout_alignStart="@+id/txtE_Sede"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/txtUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre_de_Usuario"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#c8757575"
                android:layout_below="@+id/txtE_Usuario"
                android:layout_alignLeft="@+id/txtE_Usuario"
                android:layout_alignStart="@+id/txtE_Usuario"/>

            <TextView
                android:id="@+id/txtE_NombreLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Local de Aplicación"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/txtE_Usuario"
                android:layout_alignLeft="@+id/txtE_Usuario"
                android:layout_alignStart="@+id/txtE_Usuario"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/txtNombreLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre_de_local_aplicacion"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#c8757575"
                android:layout_below="@+id/txtE_NombreLocal"
                android:layout_alignLeft="@+id/txtE_NombreLocal"
                android:layout_alignStart="@+id/txtE_NombreLocal"/>

            <TextView
                android:id="@+id/txtE_Direcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección del local aplicacion"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/txtE_NombreLocal"
                android:layout_alignLeft="@+id/txtE_NombreLocal"
                android:layout_alignStart="@+id/txtE_NombreLocal"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/txtDirecion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección_del_local_aplicacion"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#c8757575"
                android:layout_below="@+id/txtE_Direcion"
                android:layout_alignLeft="@+id/txtE_Direcion"
                android:layout_alignStart="@+id/txtE_Direcion"/>

            <TextView
                android:id="@+id/txtE_NAulas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número Total de Aulas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_below="@+id/txtE_Direcion"
                android:layout_alignLeft="@+id/txtE_Direcion"
                android:layout_alignStart="@+id/txtE_Direcion"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/txtNAulas_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#c8757575"
                android:layout_below="@+id/txtE_NAulas"
                android:layout_alignLeft="@+id/txtE_NAulas"
                android:layout_alignStart="@+id/txtE_NAulas"/>

            <TextView
                android:id="@+id/txtE_NNormales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de Aulas de Profesores sin Discapacidad"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_below="@+id/txtE_NAulas"
                android:layout_alignLeft="@+id/txtE_NAulas"
                android:layout_alignStart="@+id/txtE_NAulas"
                android:layout_marginTop="40dp"
                 />

            <TextView
                android:id="@+id/txtNAulas_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#c8757575"
                android:layout_below="@+id/txtE_NNormales"
                android:layout_alignLeft="@+id/txtE_NNormales"
                android:layout_alignStart="@+id/txtE_NNormales" />

            <TextView
                android:id="@+id/txtE_NDiscapacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de Aulas de Profesores con Discapacidad"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_below="@+id/txtE_NNormales"
                android:layout_alignLeft="@+id/txtE_NNormales"
                android:layout_alignStart="@+id/txtE_NNormales"
                android:layout_marginTop="40dp"
                />

            <TextView
                android:id="@+id/txtNAulas_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#c8757575"
                android:layout_below="@+id/txtE_NDiscapacidad"
                android:layout_alignLeft="@+id/txtE_NDiscapacidad"
                android:layout_alignStart="@+id/txtE_NDiscapacidad" />

            <TextView
                android:id="@+id/txtE_NContingencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de Aulas de Contingencia"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_below="@+id/txtE_NDiscapacidad"
                android:layout_alignLeft="@+id/txtE_NDiscapacidad"
                android:layout_alignStart="@+id/txtE_NDiscapacidad"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/txtNAulas_contin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#c8757575"
                android:layout_below="@+id/txtE_NContingencia"
                android:layout_alignLeft="@+id/txtE_NContingencia"
                android:layout_alignStart="@+id/txtE_NContingencia" />

            <Button
                android:id="@+id/btnCorrecto"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text="Son Correctos"
                android:textStyle="bold"
                android:background="@drawable/button_cr2"
                android:textColor="@color/button_background"
                android:layout_below="@+id/txtNAulas_contin"
                android:drawableTop="@drawable/greenok"
                android:onClick="clickCorrecto"
                android:textSize="20dp"
                android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp"/>

            <Button
                android:id="@+id/btnIncorrecto"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text="No son los Datos"
                android:textStyle="bold"
                android:background="@drawable/button_cr2"
                android:textColor="@color/button_background"
                android:layout_alignBottom="@id/btnCorrecto"
                android:layout_toEndOf="@id/btnCorrecto"
                android:layout_toRightOf="@id/btnCorrecto"
                android:drawableTop="@drawable/redcross"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:onClick="clickIncorrecto"
                android:textSize="20dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>